{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "noEmit": true,
      "incremental": true,
      "tsBuildInfoFile": ".turbo/tsbuildinfo",
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["shared/*"],
        "@client/*": ["apps/client/src/*"],
        "@server/*": ["apps/server/src/*"],
        "@content/*": ["ai-services/content-generator/src/*"],
        "@personalization/*": ["ai-services/personalization/src/*"],
        "@accessibility/*": ["ai-services/accessibility/src/*"]
      }
    },
    "include": [
      "apps/**/*",
      "shared/**/*",
      "ai-services/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      ".turbo"
    ]
  }
  