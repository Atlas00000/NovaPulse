{
    "compilerOptions": {
      "target": "ES2021",
      "lib": ["DOM", "ESNext"],
      "jsx": "preserve",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".",                  // ← important
      "paths": {
        "@/components/*": ["components/*"],
        "@/hooks/*":      ["hooks/*"],
        "@/theme/*":      ["theme/*"],
        "@/styles/*":     ["styles/*"],
        "@/utils/*":      ["utils/*"]
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "global.d.ts"                   // ← include your globals
    ],
    "exclude": ["node_modules"]
  }
  